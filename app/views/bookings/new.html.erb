<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Reserve a booking</h3>
          <%= simple_form_for [@article, @booking] do |f| %>
          <%= f.input :start_date %>
          <%= f.input :message %>
          <%= f.input :price %>
          <%= f.input :status, input_html: {hidden: :true} %>
          <%= f.input :number_of_weeks, collection: Booking::WEEKS %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
