<div class="container">

    <% @bookings.order('status').each do |booking| %>
      <div class="card-product p-2 m-2">
        <%= cl_image_tag (booking.article.photos.first.key) %>
        <div class="card-product-infos">
          <h2><%= booking.article.name %></h2>
          <h2>Status: <%= booking.status %></h2>
          <p>Booked for: <%= booking.number_of_weeks %> </p>
          <p><%= booking.article.gender %></p>
          <p><%= booking.article.size %></p>
          <p><%= booking.price %></p>
        </div>
      </div>
    <% end %>
</div>

